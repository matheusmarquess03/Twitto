<%puts "nope#################################"%>
<%binding.pry%>
<%puts current_user%>
<%=turbo_frame_tag "notification_bell_icon" do%>
  <% if current_user.notifications.unread.count>0 %>
    <%= turbo_frame_tag "notify" do%>
      <i class="fa-solid fa-bell" style="color:red" id="notified_bell"><%=current_user.notifications.unread.count%></i>
      <%=link_to "Notification", notifications_path,class:"sidebarOption_notification",style:"color:red",data:{"turbo-frame": "_top"}%>
    <%end%>
  <%else%>
    <%= turbo_frame_tag "notify" do%>
      <i class="fa-solid fa-bell" id="unnotified_bell"></i>
      <%=link_to "Notification", notifications_path,class:"sidebarOption_profile",style:"color:black",data:{"turbo-frame": "_top"}%>
    <%end%>
  <%end%>
<%end%>