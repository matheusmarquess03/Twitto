
<div class="edit_profile">
  <div class="left_edit">
    <h1 class="profile_eidt_heading">Twitter</h1>
  </div>
  <div class="right_edit">
    <div class="container">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>

      <%= link_to "Back", :back %>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-3 custom-file">
          <%= f.label :profile_image,class:"custom-file-label" %><br />
          <%= f.file_field :profile_image, autofocus: true, class:"custom-file-input" %>
        </div>



        <div class="field mb-3">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true, class:"form-control" %>
        </div>

        <div class="field  mb-3">
          <%= f.label :user_name %><br />
          <%= f.text_field :username, autofocus: true,class:"form-control"%>
        </div>


        <div class="field mb-3">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"form-control" %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field mb-3">
          <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
          <%= f.password_field :password, autocomplete: "new-password",class:"form-control" %>
          <% if @minimum_password_length %>
            <br />
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>

        <div class="field mb-3">
          <%= f.label :password_confirmation %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"form-control" %>
        </div>

        <div class="field mb-3">
          <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password",class:"form-control" %>
        </div>

        <div class="actions mb-3">
          <%= f.submit "Update",class:"btn btn-primary update_profile" %>
        </div>
      <% end %>

      <h3>Cancel my account</h3>

      <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete,class:"btn btn-danger delete_profile" %></p>

    </div>
  </div>
</div>
