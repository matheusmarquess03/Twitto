
<%if !comment.id.nil?%>
  <div class="post">
    <div class="post_avatar">
      <%if !comment.comment.user.profile_image.byte_size.nil?%>
        <%= image_tag comment.comment.user.profile_image,class:"post_image"%>
      <%else%>
        <%=gravatar_image_tag(comment.comment.user.email, size:64,alt:Current.user.name,class:"post_image")%>
      <%end%>
    </div>
    <div class="post_body">
      <div class="post_header">
        <div class="post_headerText">
          <h3>Retweeted by <span class="post_headerSpecial"> @<%=link_to comment.user.name, profile_path(comment.user.id),data:{"turbo-frame": "_top"}%></span></h3>
          Tweeted by <span class="post_headerSpecial"> @<%=link_to comment.comment.user.username, profile_path(comment.comment.user.id),data:{"turbo-frame": "_top"}%></span>
          <p class= "post_headerTimestamp"><%= comment.created_at%> </p>
        </div>
        <div class=post_headerDescription>
          <p> <%=comment.comment.body%></p>
        </div>
        <%if !comment.comment.comment_image.byte_size.nil?%>
          <%= image_tag comment.comment.comment_image,style:"border-radius:0"%>
        <%end%>
      </div>
      <div class="post_footer">

        <div class="likeOption">
          <%= render "comments/commentlike",comment:comment %>
        </div>


        <div class="recommentOption">
          <span><%=button_to "", recomment_tweet_comment_path(comment.comment) ,method: :post,class:"fa-solid fa-retweet",data:{"turbo-frame": "_top"}, style:"border:none"  %></span>
        </div>

        <% if comment.user.id == Current.user.id %>
          <div class="deleteOption">
            <%= link_to "", [comment.tweet, comment], data: {
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
            },class:"fa-solid fa-trash" %>
          </div>
        <%end%>
      </div>
    </div>
  </div>
<%end%>