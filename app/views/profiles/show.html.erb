<style>
    .profile{
        display: flex;
        height:100vh;
        max-width:1300px;
        margin-left: auto;
        margin-right: auto;
        padding:0 10px;
    }

    .profile_body{
        flex-direction:column;
    }

    .profile_header{
        display:flex;
        align-items:center;
        justify-content:center;
    }

    .profile_avatar{
        padding:20px;
        font-size:50px;
    }

    .profile_headerText{
        font-weight:600;
        font-size:12px;
        color:gray;
    }

</style>
<div class="profile">
  <%=render "shared/sidebar"%>
  <div class="profile_body">
    <div class="profile_header">

      <div class="profile_avatar">
        <i class="fa-solid fa-user"></i>
      </div>

      <div class="post_headerText">
        <h3><%=@profile.name  %><button class="btn btn-primary ms-3">Follow</button>   </h3>
        <p class="mt-3">Followers- 100   Following- 77</p>
      </div>
    </div>
    <div class="profile_body">
      <%=render "shared/post", tweets:@profile.tweets.all.order("created_at DESC")%>
    </div>
    <div>
    </div>
  </div>
</div>