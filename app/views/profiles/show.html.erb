<div class="profile">
  <%=render "shared/sidebar"%>
  <div class="profile_body">
    <div class="profile_header">

      <div class="profile_avatar">
        <%if !@profile.profile_image.byte_size.nil?%>
          <%= image_tag @profile.profile_image,class:"profile_image"%>
        <%else%>
          <%=gravatar_image_tag(@profile.email, size:64,alt:current_user.name,class:"profile_image")%>
        <%end%>
      </div>

      <div class="post_headerText">
        <h3 class="follow_unfollow_button">
          <%=@profile.name  %>
          <% if !(@profile.id == current_user.id)%>
            <%if Current.user.following?(@profile)%>
              <%=button_to "Unfollow",profile_friendship_path(@profile),method: :delete,class:"btn btn-danger ms-3"%></button>
            <%elsif%>
              <%=button_to "Follow",profile_friendships_path(@profile),class:"btn btn-primary ms-3"%></button>
            <%end%>
          <%elsif%>
            <%=link_to "" , edit_user_registration_path,class:"fa-solid fa-gear ms-4"%>
          <%end%>
        </h3>
        <p class="mt-3">Followers- <%=@profile.followers.count%>   Following- <%=@profile.following.count%> </p>


      </div>
    </div>

    <div class="profile_body">
      <%@profile.tweets.all.each do |tweet|%>
        <%=render "tweets/tweet", tweet:tweet%>
      <%end%>
    </div>
    <div>
    </div>
  </div>
</div>